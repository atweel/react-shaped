{
  "name": "root",
  "version": "1.0.0-alpha.0",
  "main": "index.js",
  "repository": "https://github.com/atweel/react-structured.git",
  "author": "Eduard Malakhov <eduard@atweel.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "package"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**"
    ]
  },
  "scripts": {
    "prebuild": "yarn lint",
    "build": "lerna run build",
    "postbuild": "yarn test",
    "lint": "yarn eslint --ext .ts --ext .tsx  .",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "prepack": "yarn lint",
    "preversion": "git fetch origin 'refs/tags/*:refs/tags/*'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn build",
      "post-checkout": "git config merge.versioned-json.driver $(realpath scripts/merge_versioned_json.sh)"
    }
  },
  "devDependencies": {
    "@types/grunt": "^0.4.25",
    "@types/node": "^13.13.2",
    "grunt": "^1.1.0",
    "grunt-cli": "^1.3.2",
    "grunt-git": "^1.0.14",
    "lerna": "^3.20.2",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}
