// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.106.0/containers/typescript-node-12
{
	"name": "Node.js 12 & TypeScript",
	"dockerFile": "Dockerfile",
	"remoteUser": "user",
	"containerEnv": {
		"WORKSPACE": "/workspace",
		"WEBPACK_DEV_SERVER_PORT": "3000",
		"WEBPACK_DEV_SERVER_HOST": "0.0.0.0",
		"BACKEND_SERVER_PORT": "3001",
		"BACKEND_SERVER_HOST": "0.0.0.0"
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
	"workspaceFolder": "/workspace",

	"mounts": [
		"source=${localEnv:HOME}/.aws/,target=/home/user/.aws/,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.config/gh/,target=/home/user/.config/gh/,type=bind,consistency=cached",
	],

	// Set *default* container specific settings.json values on container create.
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash"
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"dbaeumer.vscode-eslint",
		"wmaurer.change-case",
		"markis.code-coverage",
		"aws-scripting-guy.cform",
		"humao.rest-client",
		"esbenp.prettier-vscode",
		"jpoissonnier.vscode-styled-components"
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [ 3000, 3001 ],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "yarn install",

	// Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
	// "remoteUser": "node"
}